@page "/CAsignaturas"



<div class="container">

    <h3 class="display-4 text-center">Consulta de Asignaturas</h3>
    <p class="text-muted">@Mensaje</p>

    <div>

        @if (Lista.Count == 0)
        {
            if (Cargando == false)
            {
                <div class="text-center">
                    <div class="spinner-border">
                        <span class="sr-only">Loading....</span>
                    </div>
                </div>
            }
            else
            {
                <p class="display-3 text-center">No hay datos que mostrar</p>
            }
        }
        else
        {
            <table class="table">

                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Codigo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">PreRequisitos</th>
                        <th scope="col">Creditos</th>
                        <th></th>
                        <th></th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var obj in Lista)
                    {
                        <tr>
                            <td scope="row">@obj.AsignaturaId</td>
                            <td>@obj.Codigo</td>
                            <td>@obj.Descripcion</td>
                            <td>@obj.PreRequisito</td>
                            <td>@obj.Creditos</td>
                            <td><a class="btn btn-sm btn-outline-primary" href="Asignaturas/@obj.AsignaturaId">Ver</a></td>
                        </tr>
                    }


                </tbody>

            </table>

        }


    </div>

</div>

@code {


    public List<Asignaturas> Lista { get; set; }
    public string Mensaje { get; set; }
    public bool Cargando { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Lista = new List<Asignaturas>();
        Cargando = false;

        try
        {
            await Task.Run(() => { CargarLista(); });
        }
        catch (Exception)
        {

            Mensaje = "Error!!";
        }


    }

    private void CargarLista()
    {
        Lista = AsignaturaController.GetList(A => true);
        Cargando = true;
    }

  
}